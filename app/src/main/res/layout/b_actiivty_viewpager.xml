<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_show"
        android:layout_width="match_parent"
        android:layout_height="260dp" />

    <LinearLayout
        android:id="@+id/ll_vp_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignBaseline="@id/vp_show"
        android:layout_alignBottom="@id/vp_show"
        android:background="#5666"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_vp_show_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:text="test" />

        <LinearLayout
            android:layout_weight="0.25"
            android:id="@+id/ll_dot_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>